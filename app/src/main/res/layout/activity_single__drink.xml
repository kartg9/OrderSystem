<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Pack_Drink">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0"
        android:text="請選擇飲料"
        android:textColor="@android:color/black"
        android:textSize="30sp"
        android:textStyle="bold"
        android:gravity="center" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="391dp"
        android:layout_weight="0"
        android:orientation="vertical">

        <Button
            android:id="@+id/Single_Cof"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="美式咖啡" />

        <Button
            android:id="@+id/Single_Nemon"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="檸檬紅茶" />

        <Button
            android:id="@+id/Single_Cok"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="百是可樂" />

        <Button
            android:id="@+id/Single_Chino"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="卡布奇諾" />

        <Button
            android:id="@+id/Single_Nate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="拿鐵咖啡" />

        <Button
            android:id="@+id/Single_Fanda"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="分答汽水" />

        <Button
            android:id="@+id/Single_Jui"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="鮮榨果汁" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="0"
        android:orientation="vertical">

        <Button
            android:id="@+id/Single_Drink_Back"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="返回" />
    </LinearLayout>

</LinearLayout>